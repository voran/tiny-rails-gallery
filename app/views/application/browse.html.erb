<ul class="breadcrumb">           
   <li><a href="/browse.html/">Home</a></li>
   <% 0.upto(@entry.split('/').length - 1) do | n | %>
     <li> <span class="divider">/</span> <a href="/browse.html/<%= @entry_urlencoded.split('/')[0..n].join('/') %>/"><%= @entry.split('/')[n].gsub!('_',' ') %></a></li>
   <% end %>
</ul>

<div class="row">
<% @output[:subdirs].each do |subdir| %>
  <div class="col-md-2 text-center padded">
    <div class="folder-container">
        <img class="folder" src="<%= @photos_baseurl + random_cover(@photos_root, @entry + '/' + subdir).to_s %>" alt="folder icon"/>
    </div>
    <a class="break-word" href="<%=u subdir %>/"><%= subdir.gsub!('_',' ') %></a>
  </div>
<% end %>
</div>

<div class="row" id="links">
<% @output[:files].each do |file| %>
  <a class="col-md-2 text-center padded gallery-item" href="<%= @photos_baseurl + @entry_urlencoded + u(file) %>">
    <img src="<%= @thumbs_baseurl + @entry_urlencoded + u(file) %>" class="img-responsive" alt="<%= file %>" />
  </a>
<% end %>
</div>